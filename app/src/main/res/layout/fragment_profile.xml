<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.profile.ProfileFragment">

    <RelativeLayout
        android:id="@+id/text_tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/rLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_15sdp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:id="@+id/ivBoy"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/boy_outline" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/ivBoy"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/custom_bg_gray"
                android:fontFamily="@font/roboto"
                android:hint="Name"
                android:gravity="center"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/colorGray_1"
                android:textColorHint="@color/colorGray_4"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/edtName"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/custom_bg_gray"
                android:fontFamily="@font/roboto"
                android:hint="Email"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/colorGray_1"
                android:textColorHint="@color/colorGray_4"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/edtEmail"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/custom_bg_gray"
                android:fontFamily="@font/roboto"
                android:hint="Phone number"
                android:gravity="center"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/colorGray_1"
                android:textColorHint="@color/colorGray_4"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/edtPhone"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_ripple_black"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>